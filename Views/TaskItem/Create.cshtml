@using ReadyTask.ViewModels
@model TaskItemCreate

@{



    <h2>Create</h2>

    <h4>Task</h4>

    <form asp-action="Create">
        <div class="form-group">
            <label asp-for="TaskItem.Title" class="control-label"></label>
            <input asp-for="TaskItem.Title" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="TaskItem.Description" class="control-label"></label>
            <input asp-for="TaskItem.Description" class="form-control" />
        </div>
        <div class="form-group">
            <label class="control-label">Assigned User</label>
            @Html.DropDownListFor(x => x.TaskItem.AssignedUserId,
    new SelectList(Model.ReadyTaskUsers, "Id", "FirstName"))
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </form>
}
